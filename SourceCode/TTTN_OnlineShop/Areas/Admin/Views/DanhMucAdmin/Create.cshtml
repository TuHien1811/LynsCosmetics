
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayoutAdmin.cshtml";
}


<!DOCTYPE html>
<html>
<style>
    input[type=text], select {
        width: 100%;
        padding: 12px 20px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

    input[type=submit] {
        width: 100%;
        background-color: #2a9fd6;
        color: white;
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

        input[type=submit]:hover {
            background-color: #33FFD8;
        }
</style>
<body>

    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Quản lý danh mục</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index","MainAdmin")">Home</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Index","DanhMucAdmin")">Quản lý danh mục</a></li>
            <li class="breadcrumb-item">Thêm mới</li>
        </ol>
    </div>
    <div style="margin:auto;width:50%;">
        @using (Html.BeginForm("Create", "DanhMucAdmin", FormMethod.Post))
        {
            <label for="nBarnd">Tên danh mục sản phẩm</label>
            <input type="text" id="nBrand" name="TenDanhMuc" placeholder="Tên danh mục.." required>

            <label for="tinhtrang">Tình trạng</label>
            <select id="tinhtrang" name="TinhTrangDM" required>
                <option value="0">Đang hoạt động</option>
                <option value="1">Ngưng hoạt động</option>
            </select>

            <input type="submit" value="Thêm mới">
        }

    </div>

</body>
</html>
