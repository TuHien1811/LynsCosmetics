@model LynsCosmetics_Connection.Table_TinTuc
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayoutAdmin.cshtml";
}


<!DOCTYPE html>
<html>
<script src="~/Assets/Admin/js/Product/previewFile.js"></script>
<style>
    input[type=text] {
        width: 100%;
        height: 40px;
        background-color: white;
        padding: 12px 20px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

    input[type=file] {
        width: 100%;
        display: inline-block;
    }

    input[type=submit] {
        background-color: #2a9fd6;
        color: white;
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        border-radius: 20px;
        cursor: pointer;
        width: 300px;
        margin-left: 32%;
        border: 1px solid #ccc;
    }

        input[type=submit]:hover {
            background-color: #33FFD8;
        }
</style>

<body>

    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Quản lý blog</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index","MainAdmin")">Home</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Index","TinTucAdmin")">Quản lý blog</a></li>
            <li class="breadcrumb-item">Edit</li>
        </ol>
    </div>
    @using (Html.BeginForm("Edit", "TinTucAdmin", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
<table style="width:90% ;margin:auto; background:white;">
    <tr>
        <td style="width:18%">Mã bài đăng</td>
        <td> <input style="width:600px; float:left;" type="text" name="MaTinTuc" value="@Model.MaTinTuc" readonly/></td>
        <td rowspan="5">
            <div>
                <img id="target" class="img" src="~/Assets/User/img/tintuc/@Model.AnhBia" alt="your image  preview" style="float:right;width:200px;height:200px;"></img>
            </div>
        </td>
    </tr>
    <tr>
        <td>Ngày đăng</td>
        <td> <input style="width:600px; float:left;" type="text" name="NgayDang" value="@Model.NgayDang" readonly /></td>
    </tr>
    <tr>
        <td style="width:18%">Tiêu đề bài viết</td>
        <td> <input style="width:600px; float:left;" type="text" name="TieuDe" value="@Model.TieuDe" placeholder="Tiêu đề bài viết..." required /></td>
    </tr>
    <tr>
        <td colspan="2" style="height:10px"></td>
    </tr>
    <tr>
        <td style="width:18%">Ảnh bìa</td>
        <td><input type="file" name="AnhBia" id="file_anhbia" onchange="previewFile();"></td>

    </tr>
    <tr>
        <td style="width:18%">Ảnh tin tức</td>
        <td><input style="float:left;" type="file" id="file_anhtintuc" name="AnhTinTuc" /></td>
    </tr>
    <tr>
        <td colspan="2" style="height:15px"></td>
    </tr>
    <tr>
        <td>Tình trạng</td>
        <td>
            <select style="width:600px; height:40px;border-radius:4px;" id="tinhtrang" name="TinhTrangTT" required>
                @if (@Model.TinhTrangTT == 1)
                {
                    <option value="1" selected>Đang hoạt động</option>
                    <option value="0">Ẩn bài viết</option>

                }
                else
                {
                    <option value="0" selected>Ẩn bài viết</option>
                    <option value="1">Đang hoạt động</option>
                }
            </select>
        </td>
    </tr>
    <tr>
        <td colspan="2" style="height:15px"></td>
    </tr>
    <tr>
        <td>Nội dung</td>
        <td colspan="2" style="width:600px"><textarea class="ckeditor" name="NoiDung" rows="10" cols="30">@Model.NoiDung</textarea></td>

    </tr>
    <tr>
        <td colspan="2" style="height:15px"></td>
    </tr>
    <tr>
        <td colspan="3">
            <input type="submit" name="btnSuaTinTuc" value="Cập nhật" />
        </td>
    </tr>

</table>
    }
</body>
</html>


