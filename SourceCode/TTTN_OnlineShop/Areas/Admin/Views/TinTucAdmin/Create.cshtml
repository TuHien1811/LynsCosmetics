
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayoutAdmin.cshtml";
}


<!DOCTYPE html>
<html>
<script src="~/Assets/Admin/js/Product/previewFile.js"></script>
<style>
    input[type=text] {
        width: 100%;
        height: 40px;
        background-color: white;
        padding: 12px 20px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

    input[type=file] {
        width: 100%;
        display: inline-block;
    }

    input[type=submit] {
        background-color: #2a9fd6;
        color: white;
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        border-radius: 20px;
        cursor: pointer;
        width: 300px;
        margin-left: 32%;
        border: 1px solid #ccc;
    }

        input[type=submit]:hover {
            background-color: #33FFD8;
        }
</style>

<body>

    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Quản lý blog</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index","MainAdmin")">Home</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Index","TinTucAdmin")">Quản lý blog</a></li>
            <li class="breadcrumb-item">Thêm mới</li>
        </ol>
    </div>
    @using (Html.BeginForm("Create", "TinTucAdmin", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <table style="width:90% ;margin:auto; background:white;">

            <tr>
                <td style="width:18%">Tiêu đề bài viết</td>
                <td> <input style="width:600px; float:left;" type="text" name="TieuDe" placeholder="Tiêu đề bài viết..." required /></td>
                <td rowspan="5">
                    <div>
                        <img id="target" class="img" src="#" alt="your image  preview" style="float:right;width:200px;height:200px;"></img>
                    </div>
                </td>
            </tr>
            <tr>
                <td colspan="2" style="height:10px"></td>
            </tr>
            <tr>
                <td style="width:18%">Ảnh bìa</td>
                <td><input type="file" name="AnhBia" id="file_anhbia" onchange="previewFile();" required></td>

            </tr>
            <tr>
                <td style="width:18%">Ảnh tin tức</td>
                <td><input style="float:left;" type="file" id="file_anhtintuc" name="AnhTinTuc" /></td>
            </tr>
            <tr>
                <td colspan="2" style="height:15px"></td>
            </tr>
            <tr>
                <td>Tình trạng</td>
                <td>
                    <select style="width:600px; height:40px;border-radius:4px;" id="tinhtrang" name="TinhTrangTT" required>
                        <option value="1">Đăng bài viết</option>
                        <option value="0">Ẩn bài viết</option>
                    </select>
                </td>
            </tr>
            <tr>
                <td colspan="2" style="height:15px"></td>
            </tr>
            <tr>
                <td>Nội dung</td>
                <td colspan="2" style="width:600px"><textarea class="ckeditor" name="NoiDung" rows="10" cols="30"></textarea></td>
            </tr>
            <tr>
                <td colspan="2" style="height:15px"></td>
            </tr>
            <tr>
                <td colspan="3">
                    <input type="submit" name="btnThemTinTuc" value="Thêm mới" />
                </td>
            </tr>

        </table>
    }
</body>
</html>
