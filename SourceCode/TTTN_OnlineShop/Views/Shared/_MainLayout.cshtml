@using Microsoft.AspNet.Identity;
@{
    ViewBag.Title = "_MainLayout";
}
<!doctype html>
<html class="no-js" lang="zxx">

<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Lyn's Cosmetic || HomePage</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Favicons -->
    <link rel="shortcut icon" href="~/Assets/Admin/img/logo/e40739ae-e933-46af-b092-3730e13a283a_200x200.png">
    <!-- Fontawesome css -->
    <link rel="stylesheet" href="~/Assets/User/css/font-awesome.min.css">
    <!-- Animate css -->
    <link rel="stylesheet" href="~/Assets/User/css/animate.css">
    <!-- 7-stroke fonts css -->
    <link rel="stylesheet" href="~/Assets/User/css/pe-icon-7-stroke.min.css">
    <!-- Nice select css -->
    <link rel="stylesheet" href="~/Assets/User/css/nice-select.css">
    <!-- Jquery fancybox css -->
    <link rel="stylesheet" href="~/Assets/User/css/jquery.fancybox.css">
    <!-- Jquery ui price slider css -->
    <link rel="stylesheet" href="~/Assets/User/css/jquery-ui.min.css">
    <!-- Meanmenu css -->
    <link rel="stylesheet" href="~/Assets/User/css/meanmenu.min.css">
    <!-- Owl carousel css -->
    <link rel="stylesheet" href="~/Assets/User/css/owl.carousel.min.css">
    <!-- Bootstrap css -->
    <link rel="stylesheet" href="~/Assets/User/css/bootstrap.min.css">
    <!-- Custom css -->
    <link rel="stylesheet" href="~/Assets/User/css/default.css">
    <!-- Main css -->
    <link rel="stylesheet" href="~/Assets/User/css/style.css">
    <!-- Responsive css -->
    <link rel="stylesheet" href="~/Assets/User/css/responsive.css">

    <!-- Modernizer js -->
    <script src="~/Assets/User/js/vendor/modernizr-3.5.0.min.js"></script>
</head>

<body class="template-color-1">

    <!-- Main Wrapper Start Here -->
    <div class="wrapper">

        <!-- Main Header Area Start Here -->
        <!-- Main Header Area Three Start Here -->
        @*do du lieu theo kieu html.partial sau do chuyen ve mvchtmlString*@
        @{
            var headerPartial = Html.Partial("_Header");
            headerPartial = new MvcHtmlString(headerPartial.ToString());
        }
        @headerPartial

        <!-- Header Middle Start Here -->
        <div class="header-middle stick header-sticky">
            <div class="header-middle_nav position-relative">
                <div class="container">
                    <div class="row align-items-center">
                        <!-- Logo Start -->
                        <div class="col-xl-3 col-lg-2 col-6">
                            <div class="logo">
                                <a href="#">
                                    <h3>Lyn's Cosmetics</h3>
                                </a>
                            </div>
                        </div>
                        <!-- Logo End -->
                        <!-- Menu Area Start Here -->
                        <div class="col-xl-7 col-lg-8 d-none d-lg-block position-static">
                            <nav>
                                <ul class="header-bottom-list d-flex justify-content-start">
                                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                                    <li>@Html.Partial("_ThuongHieu", TTTN_OnlineShop.Models.BUS.ThuongHieuBUS.Danhsach())</li>
                                    <li>@Html.Partial("_DanhMuc", TTTN_OnlineShop.Models.BUS.DanhMucBUS.Danhsach())</li>
                                    <li>
                                        @Html.ActionLink("Shop", "Index", "Shop")
                                    </li>
                                    <li>
                                        @Html.ActionLink("Blog", "Index", "TinTuc")
                                    </li>
                                    <li>
                                        @Html.ActionLink("My Orders", "Index", "DonHang")
                                    </li>
                                </ul>
                            </nav>
                        </div>
                        <!-- Menu Area End Here -->
                        <!-- Cart Box Start Here -->
                        <div class="col-xl-2 col-lg-2 col-6">
                            <div class="cart-box">
                                <ul>
                                    <!-- Search Box Start Here -->
                                    <li>
                                        <a href="#">
                                            <span class="pe-7s-search"></span>
                                        </a>
                                        <div class="categorie-search-box ht-dropdown">
                                            <form action="#">
                                                <input type="text" name="search" placeholder="Search our catalog">
                                                <button>
                                                    <span class="pe-7s-search"></span>
                                                </button>
                                            </form>
                                        </div>
                                    </li>
                                    <!-- Categorie Search Box End Here -->
                                    <li>
                                        @if (User.Identity.IsAuthenticated)
                                        {
                                            @Html.Partial("_CartList", TTTN_OnlineShop.Models.BUS.GioHangBUS.DanhSach(User.Identity.GetUserId()));

                                        }
                                        else
                                        {
                                            <span></span>
                                        }

                                    </li>
                                </ul>
                            </div>
                        </div>
                        <!-- Cart Box End Here -->
                    </div>
                    <!-- Row End -->

                </div>
                <!-- Container End -->
            </div>
        </div>
        <!-- Header Middle End Here -->
        <!-- Main Header Area Three End Here -->
        <!-- Main Header Area End Here -->


        @RenderBody()
        <br /><br />
        <!-- Footer Area Start Here -->
        @*do du lieu theo kieu render partial*@
        @{Html.RenderPartial("_Footer");}
        @RenderSection("scripts", required: false)
        <!-- Footer Area End Here -->

    </div>
    <!-- Main Wrapper End Here -->
    <!-- jquery 3.3.1 -->
    <script src="~/Assets/User/js/vendor/jquery-3.3.1.min.js"></script>
    <!-- Countdown js -->
    <script src="~/Assets/User/js/jquery.countdown.min.js"></script>
    <!-- Mobile menu js -->
    <script src="~/Assets/User/js/jquery.meanmenu.min.js"></script>
    <!-- ScrollUp js -->
    <script src="~/Assets/User/js/jquery.scrollUp.js"></script>
    <!-- Fancybox js -->
    <script src="~/Assets/User/js/jquery.fancybox.min.js"></script>
    <!-- Jquery nice select js -->
    <script src="~/Assets/User/js/jquery.nice-select.min.js"></script>
    <!-- Jquery ui price slider js -->
    <script src="~/Assets/User/js/jquery-ui.min.js"></script>
    <!-- Owl carousel -->
    <script src="~/Assets/User/js/owl.carousel.min.js"></script>
    <!-- Bootstrap popper js -->
    <script src="~/Assets/User/js/popper.min.js"></script>
    <!-- Bootstrap js -->
    <script src="~/Assets/User/js/bootstrap.min.js"></script>
    <!-- Plugin js -->
    <script src="~/Assets/User/js/plugins.js"></script>
    <!-- Main activaion js -->
    <script src="~/Assets/User/js/main.js"></script>
    <script src="~/Assets/Admin/ckeditor/ckeditor.js"></script>
</body>


